pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '/usr/local/Cellar/maven/3.6.3_1/libexec/bin/mvn clean install'
            }
        }
        stage('Create docker image') {
            steps {
                sh '/usr/local/bin/docker image build -t sapkalrohit007/spring-boot1 .'
            }
        }
         stage('Create container') {
            steps {
                sh '/usr/local/bin/docker container run -d -p 8081:8080 sapkalrohit007/spring-boot1'
            }
        }
    }
}
